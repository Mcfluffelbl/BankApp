@* Top navigation bar *@
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Voltra Bank</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

@* Sidebar navigation menu *@
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @* Home page link *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-bank" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @* Add Account page link *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Konton">
                <span class="bi bi-plus-circle" aria-hidden="true"></span> Add Account
            </NavLink>
        </div>
        @* My Accounts Page link *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="MyAccounts">
                <span class="bi bi-list-nested" aria-hidden="true"></span> My Accounts
            </NavLink>
        </div>
        @* New Transaction page link *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="NewTransaktion">
                <span class="bi bi-database" aria-hidden="true"></span> New Transaction
            </NavLink>
        </div>
        @* History Page link *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="History">
                <span class="bi bi-hourglass" aria-hidden="true"></span> History
            </NavLink>
        </div>
    </nav>
</div>

@code {
    // Indicates whether the sidebar menu is collapsed
    private bool collapseNavMenu = true;

    //Returns the appropriate CSS class based on menu state
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    /// <summary>
    /// Toggles the visibility of the sidebar navigation menu.
    /// </summary>
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
